{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "env": {
                    "BL_SDK_BASE": "${workspaceFolder}/../bouffalo_sdk"
                }
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "make flash",
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
